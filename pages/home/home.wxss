/**index.wxss**/

.container{
  height: 1500rpx;
  background: #fff;
}
.container .search{
  width: 100%;
  height: 70rpx;
  background: #fff;
}
.search-placeholder{
  color: #A4A4A4;
}
.container .search .search-left{
    margin: 0rpx 20rpx 20rpx;
    background: #F7F7F7;
    border-radius: 30rpx;
    display: flex;
    line-height: 80rpx;
}
.container .search .search-left image{
    width: 35rpx;
    height: 35rpx;
    margin: 15rpx;
}
.container .search .search-left input{
    font-size: 24rpx;
    margin-left: 0;
    margin-top: 10rpx;

}
.container{
  padding: 0;
  font-size: 18rpx;
  color: #000;
}

.answer-image{
  width:228rpx;height:155rpx;margin:0 5rpx 0 20rpx;border-radius:8rpx
}
.answer-txt{
display: -webkit-box;  
word-break: break-all;
text-overflow: ellipsis;  
overflow: hidden;           
-webkit-box-orient: vertical;   
-webkit-line-clamp: 4;    
}
/*feed-item part is in app.wxss for multiplexing*/