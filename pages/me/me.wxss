.container{
  background: #F7F7F7;
}

.user {
  width: 725rpx;
  background: #ffffff;
  padding: 30rpx 20rpx 30rpx 20rpx;
  margin: 0 0 0 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #dcdcdc;
  box-shadow: 0 2px 5px #eeeeee;
}
.user .userinfo-avatar{
  flex: 1;
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 80rpx;
  margin: 0;
}
.user .userinfo-avatar-other{
  flex: 1;
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin-top:15rpx;
  background-size: 100% 100% ;
   border: 0;

}
.jifenStyle{
  display:block;
  font-size:26rpx;
  margin-left:25rpx;
  margin-top: 3rpx;
  color: #999999;
  background-color: #F7F7F7;
  border-radius: 45rpx;
  width: 125rpx;
  height: 45rpx;
  text-align: center;
}
.user .userinfo-avatar-button{
  flex: 1;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;

}

.userinfo-avatar-button image{
  width: 60rpx;
  height: 60rpx;
  margin: 0;
  padding: 0;
}
